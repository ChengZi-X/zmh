<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="邮箱"
            android:textColor="@color/light_black"
            android:textSize="@dimen/z2" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入QQ邮箱"
            android:paddingLeft="10dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/z2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:background="@color/white">

        <Button
            android:id="@+id/but_get_code"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/rim_babyblue"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/babyblue"
            android:textSize="@dimen/z1" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/but_get_code"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入QQ邮箱验证码"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/z2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/but_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nextbtn"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/z2" />
    </RelativeLayout>
</LinearLayout>
